{
  "extends": "@supportclass/tsconfig-nodecg-client",
  
  "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "baseUrl": "./",
      "paths": {
          "*": [
              "./src/types/*"
            ]
      },
      "types": ["vuetify"],
      "target": "es6",
      "module": "es6",
      "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*spec.ts", "node_modules"]
}