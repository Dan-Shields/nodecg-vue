{
  "extends": "@supportclass/tsconfig-nodecg-client",
  
  "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "baseUrl": "./",
      "paths": {
          "*": [
              "./src/types/*"
            ]
      },
      "types": ["vuetify"],
      "target": "es6",
      "module": "es6",
      "strict": true,
      "lib": [
          "es6",
          "dom"
      ],
      "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts", "node_modules/nodecg/types/browser.d.ts"],
  "exclude": ["src/**/*spec.ts"]
}